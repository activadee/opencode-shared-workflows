{
  "name": "codex-shared-workflows",
  "version": "1.0.0",
  "description": "Unified Codex CLI + GitHub Action bundle that replaces the legacy reusable workflows.",
  "main": "dist/action.cjs",
  "types": "dist/action.d.ts",
  "bin": {
    "codex-workflows": "dist/index.cjs"
  },
  "scripts": {
    "build": "tsup",
    "postbuild": "node scripts/copy-codex-sdk.js",
    "dev": "tsup --watch",
    "lint": "eslint \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "verify": "npm run lint && npm run typecheck && npm run test",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/activadee/codex-shared-workflows.git"
  },
  "keywords": [],
  "author": "activadee",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/activadee/codex-shared-workflows/issues"
  },
  "homepage": "https://github.com/activadee/codex-shared-workflows#readme",
  "files": [
    "dist",
    "action.yml",
    "README.md",
    ".github"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1",
    "@actions/io": "^1.1.3",
    "@actions/tool-cache": "^2.0.2",
    "@octokit/openapi-types": "^27.0.0",
    "@openai/codex-sdk": "^0.57.0",
    "commander": "^14.0.2",
    "execa": "^9.6.0",
    "fast-glob": "^3.3.3",
    "fs-extra": "^11.3.2",
    "semver": "^7.6.3",
    "string-argv": "^0.3.2",
    "yaml": "^2.8.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/commander": "^2.12.0",
    "@types/node": "^24.10.0",
    "@types/semver": "^7.7.1",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.6.2",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  }
}
